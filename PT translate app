<script language="javaScript">
var animalList=
["dog",
"cat",
"bird",
"fish",
"horse",
"mouse",
"wolf",
"fox",
"snake",
"sheep",
"monkey",
"pig"]

var frenchList=
["PTSounds/dogfrench.mp3",
"PTSounds/catfrench.mp3",
"PTSounds/birdfrench.mp3",
"PTSounds/fishfrench.mp3",
"PTSounds/horsefrench.mp3",
"PTSounds/mousefrench.mp3",
"PTSounds/wolffrench.mp3",
"PTSounds/foxfrench.mp3",
"PTSounds/snakefrench.mp3",
"PTSounds/sheepfrench.mp3",
"PTSounds/monkeyfrench.mp3",
"PTSounds/pigfrench.mp3"]

var chineseList=
["sounds/dog.mp3",
"sounds/cat.mp3",
"sounds/bird.mp3",
"sounds/fish.mp3",
"sounds/horse.mp3",
"sounds/mouse.mp3",
"sounds/wolf.mp3",
"sounds/fox.mp3",
"sounds/snake.mp3",
"sounds/sheep.mp3",
"sounds/monkey.mp3",
"sounds/pig.mp3"]

var sound;
var french = true;

function translater(whichAnimal)
{
	var animalIndex = -1;
	for (i = 0; i < animalList.length; i++)
	{
		if(animalList[i] == whichAnimal)
		{
			animalIndex = i;
		}
	}
	
	if(document.getElementById("french").checked == true)
	{
		document.getElementById("player").src = frenchList[animalIndex];
		document.getElementById("player").play();
	}
	else
	{
		document.getElementById("player").src = chineseList[animalIndex];
		document.getElementById("player").play();
	}
}

</script>
</header>
